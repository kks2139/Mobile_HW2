<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timetable.MainActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hw2.TimeTable0">



    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Mobile HW"
        android:textSize="40dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_margin="2dp"

        />
    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="2dp"
        android:padding="27dp"
        android:text="    - Mini Calculator -\n\nThis can calculate simple calculation such as plus, minus, dividing and multiplication beautifully! Start right now ~!"
        android:textSize="30dp"
        android:textColor="#000000"
        />

    <Button
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run Mini Calculator"
        android:textSize="25dp"
        android:padding="30dp"
        android:layout_gravity="center"
        android:id="@+id/mini_bt"
        android:textColor="#000000"
        android:background="@drawable/border"
        />

</LinearLayout>
</ScrollView>
