<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:layout_margin="2dp"
    tools:context="com.example.hw2.MainActivity">

    <TextView
        android:id="@+id/hw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="#000000"
        android:padding="40dp"
        android:text="Homework Note"
        android:gravity="center"
        />

        <TextView
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:text="PASSWORD :"
            android:layout_below="@+id/hw"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:padding="5dp"
            android:maxLength="1"
            android:background="@drawable/border"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/et_pw1"
            android:inputType="numberDecimal"
            android:layout_below="@+id/pw"
            android:layout_alignLeft="@+id/pw"
            android:layout_alignStart="@+id/pw"
            />
    <TextView
        android:id="@+id/t1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/pw"
        android:layout_toRightOf="@+id/et_pw1"
        />
    <EditText
        android:padding="5dp"
        android:maxLength="1"
        android:background="@drawable/border"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/et_pw2"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/t1"
        android:layout_below="@+id/pw"
        />
    <TextView
        android:id="@+id/t2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/pw"
        android:layout_toRightOf="@+id/et_pw2"
        />
    <EditText
        android:padding="5dp"
        android:maxLength="1"
        android:background="@drawable/border"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/et_pw3"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/t2"
        android:layout_below="@+id/pw"
        />
    <TextView
        android:id="@+id/t3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/pw"
        android:layout_toRightOf="@+id/et_pw3"
        />
    <EditText
        android:padding="5dp"
        android:maxLength="1"
        android:background="@drawable/border"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/et_pw4"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/t3"
        android:layout_below="@+id/pw"
        />


</RelativeLayout>
